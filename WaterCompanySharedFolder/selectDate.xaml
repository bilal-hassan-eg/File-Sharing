<Window x:Class="WaterCompanySharedFolder.selectDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterCompanySharedFolder"
        mc:Ignorable="d"
        Title="selectDate" Height="220" Width="400">
    <Grid Background="#808e9b">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Foreground="White" Text="Date" FontSize="26" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <DatePicker x:Name="datePicker" Grid.Row="0" Grid.Column="1" Width="150" Height="60" FontSize="16"/>
        <Button Click="Button_Click" Style="{StaticResource ButtonHeader}"  Grid.Row="1" Content="Download" Width="120" Height="50" FontSize="16"/>
    </Grid>
</Window>
